		'mvn -Dhttp.proxyHost=164.22.255.145 -Dhttp.proxyPort=8181 -U validate'
	or create in ${user.home}/.m2/repository a file "settings.xml"
	with this proxy setting.
 -->

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>gdv</groupId>
  <artifactId>xport</artifactId>
  <packaging>jar</packaging>
  <version>0.0.1</version>
  <name>LogBrowser</name>
  <url>http://github/gdv.xport</url>
    
  <build>
  
  	<plugins>
  	
  	  <!-- we want Java6 -->
  	  <plugin>
  	  	<groupId>org.apache.maven.plugins</groupId>
  	  	<artifactId>maven-compiler-plugin</artifactId>
  	  	<configuration>
  	  	  <source>1.6</source>
  	  	  <target>1.6</target>
  	  	</configuration>
  	  </plugin>
  	  
  	</plugins>
  	
  </build>

  <dependencies>
  
    <dependency>
      <groupId>commons-lang</groupId>
      <artifactId>commons-lang</artifactId>
      <version>2.4</version>
    </dependency>
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.1.1</version>
    </dependency>
    <!-- FIT and FITnesse -->
    <dependency>
      <groupId>com.c2.fit</groupId>
  	  <artifactId>fit</artifactId>
  	  <version>1.1</version>
    </dependency>
    <dependency>
   	  <groupId>org.fitnesse</groupId>
	  <artifactId>fitnesse</artifactId>
      <version>20081201</version>
      <scope>test</scope>
    </dependency>
    <!-- @see http://mirrors.ibiblio.org/pub/mirrors/maven2/junit/junit/ -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>[4.4,]</version>
      <scope>test</scope>
    </dependency>

  </dependencies>
  
  <!-- 
  	  REPORTING
  	  start 'mvn site' and check reports under target/site
   -->
  <reporting>
    <plugins>
  	  <!-- Javadoc -->
	  <plugin>
		<groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-javadoc-plugin</artifactId>
		<configuration>
		  <links>
		    <link>http://java.sun.com/j2se/1.5.0/docs/api</link>
			<link>http://www.eclipse.org/aspectj/doc/released/runtime-api</link>
		  </links>
		</configuration>
	  </plugin>
	  <!-- TODO list -->
	  <plugin>
		<groupId>org.codehaus.mojo</groupId>
		<artifactId>taglist-maven-plugin</artifactId>
		<configuration>
		  <tags>
			<tag>TODO</tag>
			<tag>FIXME</tag>
		  </tags>
		</configuration>
	  </plugin>
	  <!-- Unit Tests -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-report-plugin</artifactId>
        <version>2.0</version>
      </plugin>
	  <!-- Java Cross Reference Listing -->
	  <plugin>
		<groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-jxr-plugin</artifactId>
	  </plugin>
	  <!-- 
	      code smells
	      start 'mvn pmd:pmd'
	      http://maven.apache.org/plugins/maven-pmd-plugin/
      -->
	  <plugin>
		<groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-pmd-plugin</artifactId>
		<configuration>
          <linkXref>true</linkXref>
          <sourceEncoding>utf-8</sourceEncoding>
          <minimumTokens>100</minimumTokens>
          <targetJdk>1.5</targetJdk>
        </configuration>
	  </plugin>
  	  <!-- 
  		  Cobertura
  		  see http://mojo.codehaus.org/cobertura-maven-plugin/usage.html
  	   -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>cobertura-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </reporting>
  
  <!-- More Project Information -->
  <description>
    gdv.xport is a library for the GDV format.
    It simplifies the export (and import) of it.
  </description>
  <inceptionYear>2009</inceptionYear>
  <developers>
    <developer>
      <name>Oliver Boehm</name>
      <id>boehm</id>
      <email>oliver.boehm@agentes.de</email>
      <organization>agentes AG</organization>
      <roles>
        <role>Java Developer</role>
      </roles>
    </developer>
  </developers>
  <contributors>
    <contributor>
      <name>Oliver Boehm</name>
      <email>ob@jugs.org</email>
      <organization>JUGS</organization>
      <roles>
        <role>Java Developer</role>
      </roles>
    </contributor>
  </contributors>

  <!-- 
  	  (possible) additional repositories:
  	  http://source.valtech.com/repo/content/repositories/releases/
   -->
  <repositories>
  </repositories>

</project>
